{
  "minimum_chrome_version": "33",
  "manifest_version": 1.0,
  "name": "PicoMite Term",
  "version": "0.1.1",
  "icons": {
    "128": "images/serialterm-128.png",
    "48": "images/serialterm-48.png",
    "32": "images/serialterm-32.png",
    "16": "images/serialterm-16.png"
  },
  "description": "Serial Term is a basic VT100 compatible serial terminal emulator, modified for use with MMBasic running on the Raspberry Pi - this version is for Chromebook use.",
  "offline_enabled": true,
  "permissions": [
    "serial",
    "storage",
    "fileSystem"
  ],
  "app": {
    "background": {
      "scripts": [
        "js/background.js"
      ]
    }
  }
}
